---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="col-sm-6 mb-3">
	<div class="card">
		<div class="card-body">
			<h5 class="card-title">{title}<span>&rarr;</span></h5>
			<p class="card-text">{body}</p>
			<a href={href} class="btn btn-primary">Go there</a>
		</div>
	</div>
</div>
